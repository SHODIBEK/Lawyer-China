
mixin form(id, text, data)
  form(action="/", method="POST", id!=id, class!=attributes.class)
    if (data)
      .form-group__block
        .form-group
          input#private(type="radio", name="private", value="Частная")
          label(for="private").form-label Частная
        .form-group
          input#commercial(type="radio", name="private", value="Коммерческая" checked)
          label(for="commercial").form-label Коммерческая
    .form-group
      input(type="text", name="name", placeholder="Ваше имя")
    .form-group
      input(type="text", name="tel" placeholder="+7 (   ) _ _").phone-mask
    .form-group__btn
      button(type="submit").btn.btn-secondary!=text